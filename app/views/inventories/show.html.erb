<div class="page-header">
  <%= link_to inventories_path, :class => 'btn btn-default' do %>
    <span class="glyphicon glyphicon-list-alt"></span>
    Back
  <% end %>
  <%= link_to edit_inventory_path(@inventory), :class => 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-pencil"></span>
    Edit
  <% end %>
  <h1><%= _('Show inventory') %></h1>
</div>

<dl class="dl-horizontal">
  <dt><%= _('Product type') %>:</dt>
  <dd><%= @inventory.product_type %></dd>

  <dt><%= _('Amount') %>:</dt>
  <dd><%= @inventory.amount %></dd>

  <dt><%= _('Purchased price') %>:</dt>
  <dd><%= @inventory.purchased_price %></dd>

  <dt><%= _('Purchased date') %>:</dt>
  <dd><%= @inventory.purchased_date %></dd>

  <dt><%= _('Location') %>:</dt>
  <dd><%= @inventory.location_id %></dd>

  <dt><%= _('Status') %>:</dt>
  <dd><%= @inventory.status %></dd>

</dl>

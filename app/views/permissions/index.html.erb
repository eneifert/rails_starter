<div class="page-header">
  <% if can? :create, Permission %>
    <%= link_to new_permission_path, :class => 'btn btn-primary' do %>
      <span class="glyphicon glyphicon-plus"></span>
      New Permission
    <% end %>
  <% end %>
  <h1>Listing permissions</h1>
</div>

<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
        <th>Id</th>
            <th>Name</th>
            <th>Action</th>
            <th>Subject class</th>
            
        <th></th>        
      </tr>
    </thead>

    <tbody>
      <%= content_tag_for(:tr, @permissions) do |permission| %>
    <td><%= link_to permission.id, permission %></td>
            <td><%= permission.name %></td>
            <td><%= permission.action %></td>
            <td><%= permission.subject_class %></td>
            
        <td>
          <% if can? :update, permission %>
            <%= link_to 'Edit', edit_permission_path(permission), { :class=>"btn btn-primary" } %>
          <% end %>
          <% if can? :destroy, permission %>
            <%= link_to 'Destroy', permission, method: :delete, data: { confirm: 'Are you sure?'}, :class=>"btn btn-danger"  %>
          <% end %>
        </td>        
      <% end %>
    </tbody>
  </table>
</div>

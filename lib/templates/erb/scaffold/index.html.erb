<div class="page-header">
  <%% if can? :create, <%= class_name %> %>
    <%%= link_to new_<%= singular_table_name %>_path, :class => 'btn btn-primary' do %>
      <span class="glyphicon glyphicon-plus"></span>
      <%%= _('New <%= human_name %>') %>
    <%% end %>
  <%% end %>
  <h1><%%= _('Listing <%= plural_table_name %>') %></h1>
</div>

<div class="row">
  <table class="table table-striped table-bordered table-hover table-condensed index-table">
    <thead>
      <tr>
        <th class="id-col">Id</th>
    <% attributes.each do |attribute| -%>
        <th><%%= _('<%= attribute.human_name %>') %></th>
    <% end -%>        
        <th></th>        
      </tr>
    </thead>

    <tbody>
      <%%= content_tag_for(:tr, @<%= plural_table_name %>) do |<%= singular_table_name %>| %>
    <td><%%= link_to <%= singular_table_name %>.id, <%= singular_table_name %> %></td>
    <% attributes.each do |attribute| -%>
        <td><%%= <%= singular_table_name %>.<%= attribute.name %> %></td>
    <% end -%>        
        <td>
          <%% if can? :update, <%= singular_table_name %> %>
            <%%= link_to _('Edit'), edit_<%= singular_table_name %>_path(<%= singular_table_name %>), { :class=>"btn btn-primary" } %>
          <%% end %>
          <%% if can? :destroy, <%= singular_table_name %> %>
            <%%= link_to _('Destroy'), <%= singular_table_name %>, method: :delete, data: { confirm: _('Are you sure?')}, :class=>"btn btn-danger"  %>
          <%% end %>
        </td>        
      <%% end %>
    </tbody>
  </table>
</div>
